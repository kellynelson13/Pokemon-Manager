<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs')%>
    <style>
        body {
            background-color: rgb(204, 172, 234);
        }
        img {
            border-radius: 30px;
            
        }
        a {
            color: darkblue;
        }
    </style>
</head>
<body>
    <nav>
        <a href="/pokemon/new">Create New Pokemon</a>
    </nav>
    <div class="container">
        
        <h1>Pokemon</h1>
        
        <% for(let i=0; i < 8; i++) { %>
            <a href="/pokemon/<%=i%>"><img src="<%= allPokemon[i].img%>" ></a>
            <a href="/pokemon/<%=i%>/edit">Edit</a>
            <form action="/pokemon/<%=[i]%>?_method=DELETE" method="POST">
                <input type="submit" value="DELETE">
            </form>
            
       <% } %>

    </div> 
</body>
</html>